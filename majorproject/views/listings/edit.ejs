<% layout("/layouts/boilerplate")%>
<div class="row mt-5">
    <div class="col-8 offset-2">

    <h3>Edit your Listing</h3>
    <br>
    <form  method="POST" action="/listing/<%= listings._id %>?_method=PUT" >
        <div class="mb-3">
            <Label for="title" class="form-label">Title</Label>
            <input type="text" value="<%=listings.title %>" name="listing[title"class="form-control" >
        </div>
       
        
        <div class="mb-3">
            <Label for="description" class="form-label">Description</Label>
            <textarea type="text"  name="listing[description]" class="form-control"><%=listings.description%></textarea>
        </div>
        <div class="mb-3">
            <Label for="image" class="form-label">Image Link</Label>
            <input type="text" value="<%=listings.image.url %>" name="listing[url]" class="form-control">
        </div>
        
       <div class="row">
      <div class="mb-3 col-md-4">
        <Label for="price" class="form-label">Price</Label>
        <input type="number" value="<%=listings.price%>"  name="listing[price]" class="form-control">
      </div>
     
        <div class="mb-3 col-md-8">
            <Label for="country" class="form-label">Country</Label>
            <input type="text" value="<%=listings.country %>"  name="listing[country]" class="form-control">

        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</Label>
            <input type="text" value="<%=listings.location %>"  name="listing[location]" class="form-control">
        </div>
    
        <button class="btn btn-dark edit-btn mb-3" >Edit</button>
        <br><br><br>
       
    </form>
    </div>
    </div>

